{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "server/src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true, 
    "exactOptionalPropertyTypes": false
  },
  "include": ["server/src/**/*"],
  "exclude": ["node_modules", "dist", "client"]
}
